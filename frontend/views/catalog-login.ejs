<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/catalog.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title><%- title %></title>
</head>
<body>
        <!-- Header -->
         <%- include('partials/header-login.ejs') %>
         
         <h1 class="main-title">All Perfumes</h1>
        <!-- Filter Section -->
        
            <div class="filter-section">
                <button class="filter-btn" id="openFilterModal">Filter</button>
                <button class="order-btn">Order By</button>
            </div>
            <!-- Filter ModalBox -->
            <div id="filterModal" class="modal">
                <div class="modal-content">
                    <span class="close" id="closeFilterModal">&times;</span>
                    <h2><i class="fas fa-filter"></i> Filter Perfumes</h2>
                    <form id="priceFilterForm">
                        <div class="form-group">
                            <label for="brand"><i class="fas fa-tag"></i> Brand:</label>
                            <input type="text" id="brand" name="brand" placeholder="Masukan Brand Parfum yang disukai ">
                        </div>

                        <div class="form-group">
                            <label for="strength"><i class="fas fa-tint"></i> Strength:</label>
                            <input type="text" id="strength" name="strength" placeholder="Masukan Notes">
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-dollar-sign"></i> Price Range:</label>
                            <div class="price-inputs">
                                <input type="number" id="min-price" name="min_price" placeholder="Min ($)" min="0">
                                <span class="price-separator">â€”</span>
                                <input type="number" id="max-price" name="max_price" placeholder="Max ($)" min="0">
                            </div>
                        </div>

                        

                        <div class="button-group">
                            <button type="submit" class="btn apply-btn">
                                <i class="fas fa-check"></i> Apply Filter
                            </button>
                            <button type="button" id="resetFilterBtn" class="btn reset-btn">
                                <i class="fas fa-undo"></i> Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            



        <%- include('partials/modalBox-login.ejs') %>

        <!-- Product Grid -->
        <div class="product-container">

            <script src="js/catalog.js"></script>

                    <!-- Product Detail Modal -->
        <div id="productDetailModal" class="modal">
            <div class="modal-content product-detail-modal">
                <span class="close" id="closeProductDetailModal">&times;</span>
                <div class="product-detail-container">
                    <!-- Konten akan diisi oleh JavaScript -->
                </div>
            </div>
        </div>

        </div>
    
        <!-- Footer -->
         <%- include('partials/footer.ejs') %>
        
</body>
</html>

